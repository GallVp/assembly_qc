nextflow_process {

    name "Test Process EDTA_LTRHARVEST"
    script "../main.nf"
    process "EDTA_LTRHARVEST"

    tag "modules"
    tag "modules_nfcore"
    tag "edta"
    tag "edta/ltrharvest"

    test("homo_sapiens-genome_21_fasta") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['homo_sapiens']['genome']['genome_21_fasta'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert snapshot(path(process.out.versions[0]).text).match("script_versions") }
            )
        }

    }

    test("homo_sapiens-genome_fasta-stub") {

        options '-stub'

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['homo_sapiens']['genome']['genome_fasta'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert snapshot(path(process.out.versions[0]).text).match("stub_versions") }
            )
        }

    }

}
