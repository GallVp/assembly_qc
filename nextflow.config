params { 
    input_files             = [["hap1", "./input_data/test_data.fasta"], ["hap2", "./input_data/test_data2.fasta"]]
    lineage_datasets        = ["fungi_odb10", "microsporidia_odb10"]
    augustus_species        = ["fumigatus", "nidulans"]
    mode                    = "geno"
    download_path           = "$launchDir/busco_data"
    
    outdir {
        main                = "./results"
    }
}

process {
    executor                = 'slurm'
    cpus                    = 16
    time                    = '1hour'
    memory                  = '8.GB'
    errorStrategy           = 'retry'
    maxRetries              = 1
}

singularity {
    enabled                 = true
    autoMounts              = true
}

conda {
    enabled                 = true
}
