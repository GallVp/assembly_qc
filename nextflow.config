params { 
    inputFilePath       = "$PWD/input_data/test_data.fasta"
    lineage_dataset     = "fungi_odb10"
    augustus_species    = "fumigatus"
    mode                = "geno"
    
    threads             = 16
    help                = false
    outdir {
        main            = "$PWD/results"
    }
}

process {
    executor            = 'slurm'
    cpus                = 4
    time                = '1hour'
    memory              = '4.GB'
}

singularity {
    enabled             = true
    autoMounts          = true
}