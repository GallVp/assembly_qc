params { 
    input_files             = "$launchDir/input_data/*.fasta"
    lineage_datasets        = ["fungi_odb10", "microsporidia_odb10"]
    augustus_species        = "fumigatus"
    mode                    = "geno"
    
    outdir {
        main                = "$launchDir/results"
    }
}

process {
    executor                = 'slurm'
    cpus                    = 16
    time                    = '1hour'
    memory                  = '8.GB'
}

singularity {
    enabled                 = true
    autoMounts              = true
}