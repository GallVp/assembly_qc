params { 
    haplotype_fasta         = [["hap1", "./input_data/test_data1.fasta"], ["hap2", "./input_data/test_data2.fasta"]]
    
    busco {
        augustus_species    = ["fumigatus", "nidulans"]
        lineage_datasets    = ["fungi_odb10", "microsporidia_odb10"]
        mode                = "geno"
        download_path       = "$launchDir/busco_data"
    }
    
    outdir {
        main                = "./results"
    }
}

process {
    time                    = '1hour'
    memory                  = '8.GB'
    //errorStrategy           = 'retry'
    //maxRetries              = 1
}

profiles {
    slurm {
        process {
            cpus            = 16
            executor        = 'slurm'
        }
    }
    
    local {
        process {
            cpus            = 8
            executor        = 'local'
        }
    }
}

singularity {
    enabled                 = true
    autoMounts              = true
}

conda {
    enabled                 = true
}
